<template>
  

    ログイン
    
      

      

    
    <button @click="login">ログイン</button>
    <p>
      新規登録は
      <router-link to="/signup">こちら</router-link>
    </p>
  </div>
</template>


  export default {
    name: 'login',
    data () {
      return {
        username: '',
        password: ''
      }
    },
    methods: {
      login: function () {
        this.$router.push('/')
      }
    }
  }


<template>
  

    新規登録
    
      ログインは
      こちら
    
    
      

      

      新規登録
    
  </div>
</template>


  export default {
    name: 'Signup',
    data () {
      return {
        username: '',
        password: ''
      }
    },
    methods: {
      signup: function () {
        alert("登録されたアドレスにメールを送信しました！確認してください");
        this.$router.push('/login')
      }
    }
  }